<form action='/todos/{{todo.id}}?_method=PUT' method='POST'>
	<div class="input-group">
		<div class="input-group-text">
			<input class="form-check-input mt-0" type='checkbox' name='isDone' {{#if todo.isDone}}checked{{/if}}/>
		</div>	
		<input class="form-control" type='text' name='name' placeholder='name ...' value='{{todo.name}}' />
		<button class="btn btn-primary" type='submit'>Edit</button>
	</div>
</form>